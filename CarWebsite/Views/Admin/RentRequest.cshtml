<script>

    lucide.createIcons();

    function togglefilter(){
        const filter = document.getElementById("filterstatus");
        if(filter.style.display === "none" || filter.style.display === "") {
            filter.style.display = "block";
        }else {
            filter.style.display = "none";
        }
    }

    const options = document.querySelectorAll(".filter-option");
    options.forEach(option => {
        option.addEventListener("click", () => {
            const menu = document.getElementById("filterstatus");
            const button = document.querySelector(".filter-status");

            button.childNodes[0].textContent = option.textContent;

            menu.style.display = "none";

            const selectedStatus = option.textContent;
            const rows = document.querySelectorAll("table tbody tr");

            rows.forEach(rows => {
                const statusCell = row.cells[5];
                if(!statusCell)
                    return;

                const rowStatus = statusCell.textContent.trim();
                if(selectedStatus === "All" || rowStatus === selectedStatus) {
                    row.style.display = "";
                }else {
                    row.style.display = "none";
                }
            });
        });
    });

    function openCustPopup() {
        const popup = document.getElementById("custpopup");

        if (popup.style.display === "flex") {
            popup.style.display = "none";
        } else {
            popup.style.display = "flex";
        }
    }

</script>